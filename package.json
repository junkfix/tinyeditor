{
  "name": "spell",
  "description": "spell - a fork of pell, the simplest and smallest WYSIWYG text editor for web",
  "author": "Sylvain Pollet-Villard",
  "contributors": [
    "Jared Reich"
  ],
  "version": "0.9.0",
  "main": "./dist/spell.min.js",
  "scripts": {
    "minify": "uglifyjs spell.js --compress --mangle --ecma 7 -o spell.min.js && npm run size",
    "size": "gzip-size spell.min.js",
    "lint": "eslint spell.js --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sylvainpolletvillard/spell.git"
  },
  "keywords": [
    "text editor",
    "editor",
    "rich text",
    "wysiwyg",
    "contenteditable"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sylvainpolletvillard/spell/issues"
  },
  "devDependencies": {
    "eslint": "^4.19.0",
    "gzip-size-cli": "^2.1.0",
    "uglify-es": "^3.3.9"
  }
}
